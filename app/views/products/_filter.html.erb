<%= form_with url: "/filter", method: :get do |f| %>

    <%= f.check_box :all %>
    <%= f.label :all, "all" %>
    
    <%= f.check_box :men %>
    <%= f.label :men, "men" %>
    
    <%= f.check_box :women %>
    <%= f.label :women, "women" %>
    
    <%= f.check_box :kids %>
    <%= f.label :kdis, "kids" %>
    
    <%= f.check_box :newarrival %>
    <%= f.label :newarrival, "new-arrival" %>
    
    <%= f.label :collection_name %>
    <%= f.select :collection_name, options_from_collection_for_select(Collection.all, :id, :name), :class => 'genForm_dropBox', class: 'form-control' %>
    
    <%= f.label :color %>
    <%= f.select :color, options_for_select(["Blue", "Red", "Yellow", "Green"]), :class => 'genForm_dropBox', class: 'form-control' %>

    <%= f.label :size %>
    <%= f.select :size, options_for_select(["S", "M", "L", "XL"]), :class => 'genForm_dropBox', class: 'form-control' %>
    
    <%= f.submit "Filter"%>
<% end %>
