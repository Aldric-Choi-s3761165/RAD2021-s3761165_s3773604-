<% provide(:title, "Home") %>

<h2>Top Banner</h2>
<% if @product != nil %> 
  <%= render 'products/product', product: @product %>
<% else %> 
  <p>All products already saved.</p>
<% end %>

<h2>Popular</h2>
<table>
  <tbody>
      <% @popular.each do |p| %>
        <% if p.popularity > 5 %> 
        <td>
          <%= render 'products/product', product: p %>
        </td>
        <% end %>
      <% end %>
  </tbody> 
</table> 

<h2>Collections</h2> 
<table>
  <thead>
    <tr>
      <th> Collection </th>
      <th> Products </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <td><%= link_to "All" , all_products_url %></td>
    <% @collections.each do |collection| %>
      <tr>
        <td><%= link_to collection.name , collection %></td>
        <td> <%= collection.products.count%> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2> Newsletter </h2>
<%= render 'newsletters/new'%>