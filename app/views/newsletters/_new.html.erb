<% provide(:title, 'Newsletter') %>
<h1>Newsletter</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(Newsletter.new, :url => '/') do |f| %>
            <%= render 'shared/error_messages'%>
            
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control'%>
            
            <%= f.submit "Subscribe", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>